<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="100dip"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@drawable/item_simple_click"
              android:clickable="true"
              android:orientation="horizontal">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5.0dip"
        android:layout_marginTop="10.0dip"
        android:id="@+id/ll_fuli"
        android:orientation="horizontal">


    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_item_fuli_image"
        android:layout_width="140dip"
        android:layout_height="80.0dip"
        app:actualImageScaleType="fitXY"
        android:layout_gravity="center"
        app:placeholderImage="@drawable/loading_icon_default"
        app:placeholderImageScaleType="fitXY"
        app:viewAspectRatio="1.0"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="10.0dip"
        android:layout_marginLeft="10.0dip"
        android:layout_marginRight="16.0dip"
        android:layout_weight="1.0">

        <TextView
            android:id="@+id/tv_item_fuli_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:text="福利,小白兔，两只耳朵竖起来"
            android:textSize="16sp"
            android:textColor="@color/primary_text"/>

        <TextView
            android:id="@+id/tv_item_fuli_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10.0dip"
            android:layout_marginTop="8.0dip"
            android:maxLines="2"
            android:text="12.5万"
            android:textColor="@color/black_info_title"
            android:textSize="12sp" />

    </LinearLayout>
        </LinearLayout>

</LinearLayout>
